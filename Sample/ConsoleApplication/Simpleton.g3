grammar Simpleton;

options {
    language=CSharp3;
    output=AST;
    TokenLabelType=CommonToken;
    ASTLabelType=CommonTree;
}

@lexer::namespace{ConsoleApplication}
@parser::namespace{ConsoleApplication}

/*
 * Parser Rules
 */

public file
    : section+ EOF!
    ;

section
    : 'start' WORD* 'end'
    ;

/*
 * Lexer Rules
 */

WORD: 'a'..'z'+;
WS	: ' ' | '\t' | '\r' | '\n' { $channel = Hidden;};
